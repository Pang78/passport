{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/dist/server/index.js" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/dist/server/index.js" 
    }
  ],
  "env": {
    "PORT": "3000",
    "NODE_ENV": "production"
  }
} 