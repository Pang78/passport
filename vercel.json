{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/client",
  "regions": ["iad1"],
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/server/index.ts" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/server/index.ts" 
    }
  ],
  "env": {
    "PORT": "3000",
    "NODE_ENV": "production"
  }
} 