{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/server/index.ts" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/server/index.ts" 
    }
  ],
  "env": {
    "PORT": "3000",
    "NODE_ENV": "production"
  }
} 